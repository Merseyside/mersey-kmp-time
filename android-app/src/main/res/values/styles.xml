<?xml version="1.0" encoding="utf-8"?>
<resources>
<style name="Theme.TemplateApp" parent="Theme.TemplateApp.Base"/>

    <style name="Theme.TemplateApp.Base.OppositeStatusBar" parent="Theme.TemplateApp.Base"/>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimaryDark</item>
        <item name="hintTextColor">?attr/colorPrimaryDark</item>

        <item name="android:paddingBottom">@dimen/small_spacing</item>
    </style>


    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="tabTextAppearance">@style/CustomTabText</item>
        <item name="tabTextColor">?attr/colorOnSurface</item>
        <item name="tabSelectedTextColor">?attr/colorSecondary</item>
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
        <item name="tabBackground">@null</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">?attr/colorPrimaryDark</item>
    </style>

    <style name="ToolbarTheme.Popup" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:background">@null</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


<!--  Text styles  -->
    <style name="TemplateApp.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">@dimen/second_largest_text_size</item>
    </style>

    <style name="TemplateApp.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">@dimen/largest_text_size</item>
    </style>

    <style name="TemplateApp.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">@dimen/very_large_text_size</item>
    </style>

    <style name="TemplateApp.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="TemplateApp.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="TemplateApp.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="TemplateApp.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

</resources>